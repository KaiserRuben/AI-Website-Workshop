# KI Website Workshop Configuration

# Server settings
PORT=8000
ENVIRONMENT=development

# Database settings
DATABASE_URL=postgresql://workshop:workshop@postgres:5432/workshop
SQL_ECHO=false

# Security settings
SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
SESSION_EXPIRE_HOURS=24

# Azure OpenAI settings (from Rize.capital)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=gpt-4.1-mini
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Workshop settings
MAX_COST_PER_USER=1.00
MAX_API_CALLS_PER_MINUTE=10
WORKSHOP_ADMIN_PASSWORD=admin123

# WebSocket settings
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# Gallery settings
GALLERY_UPDATE_BATCH_INTERVAL=0.5

# CORS settings
ALLOWED_ORIGINS=*

# Logging
LOG_LEVEL=INFO